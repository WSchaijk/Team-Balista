<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/supermain"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/title_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:text="Vandaag"
        android:textColor="#DC0024"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/todays_subjects"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:text="Vandaag zijn er drie lessen die je dient te volgen: Skills, Project B en SLC."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/title_today" />

    <TextView
        android:id="@+id/meetings"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:text="Je hebt een afspraak met een peercoach om vandaag Development te bespreken."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/todays_subjects" />

    <TextView
        android:id="@+id/title_free_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="25dp"
        android:text="Vrije Kamers"
        android:textColor="#DC0024"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/meetings" />

    <TextView
        android:id="@+id/room_status"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:text="De beschikbaarheid wordt berekent."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/title_free_rooms" />

    <TextView
        android:id="@+id/poll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="25dp"
        android:text="Polls"
        android:textColor="#DC0024"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/room_status" />




</android.support.constraint.ConstraintLayout>