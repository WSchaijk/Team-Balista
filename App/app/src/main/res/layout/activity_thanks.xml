<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanksActivity" >

    <TextView
        android:id="@+id/thanks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:text="Bedankt"
        android:textColor="#DC0024"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/thanks_text"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Bedankt voor het invullen van de poll!"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/thanks_title" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terug naar start"
        app:layout_constraintTop_toBottomOf="@id/thanks_text"/>







</android.support.constraint.ConstraintLayout>